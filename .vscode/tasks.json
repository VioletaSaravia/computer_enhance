{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/std:c++20",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "clang++",
            "args": [
                "-g", // debug info like /Zi
                "-std=c++20", // C++20 standard
                "-Wall", // enable warnings
                "-Wextra",
                "-Wswitch-enum",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe", // output executable
                "${file}" // input file
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated for Clang."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe Release build active file",
            "command": "cl.exe",
            "args": [
                "/O2",
                "/std:c++20",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}_release.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}